<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.brian.letterchecker.MainActivity"
    tools:showIn="@layout/activity_main">

    <ImageButton
        android:layout_width="360dp"
        android:layout_height="360dp"
        android:background="@drawable/button_states"
        android:src="@drawable/practice_large"
        android:id="@+id/secondActivityBtn"
        android:onClick="moveActivity"
        android:layout_marginTop="38dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="360dp"
        android:layout_height="360dp"
        android:background="@drawable/button_states"
        android:src="@drawable/quiz_large"
        android:id="@+id/thirdActivityBtn"
        android:onClick="moveActivity"
        android:layout_below="@+id/secondActivityBtn"
        android:layout_alignLeft="@+id/secondActivityBtn"
        android:layout_alignStart="@+id/secondActivityBtn"
        android:layout_marginTop="35dp" />

    <ImageButton
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:background="@drawable/button_states"
        android:src="@drawable/settings_btn_large"
        android:id="@+id/btnSettings"
        android:onClick="moveActivity"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
