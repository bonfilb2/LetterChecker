<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--  layout_weight currently being used to determind size of drawable space   -->
    <!--  use android:id to change properties within code; ie change background   -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@mipmap/a"
        android:id="@+id/secondLay"
        android:orientation="vertical">

        <android.gesture.GestureOverlayView
            android:id="@+id/gesturesOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Draw the letter"
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal" />
    </LinearLayout>

</LinearLayout>
